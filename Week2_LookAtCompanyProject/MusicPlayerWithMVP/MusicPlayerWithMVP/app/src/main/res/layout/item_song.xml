<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/item_song"
        android:background="@drawable/item_song_selector"
        tools:ignore="MissingConstraints"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:layout_height="@dimen/_60sdp"
>

    <ImageView
            android:src="@drawable/ic_song"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            />

    <TextView
            android:lines="1"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintLeft_toRightOf="@id/img_thumb"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:id="@+id/tv_name"
            android:text="Name song"
            app:layout_constraintTop_toTopOf="@id/img_thumb"
            app:layout_constraintBottom_toTopOf="@id/tv_singer"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginBottom="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@id/img_thumb"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:text="Anan"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:id="@+id/tv_singer"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
