<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
    >
        <ImageView android:layout_width="@dimen/_50sdp" android:layout_height="@dimen/_50sdp"
                   android:id="@+id/iv_noti_thumb"
                   android:layout_margin="@dimen/_10sdp"
                   android:src="@drawable/ic_song"
        />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/ll_noti_player"
                      android:layout_gravity="center_vertical"
        >

            <TextView
                    android:id="@+id/tv_noti_songName"
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_noti_thumb"
                    android:textColor="@color/color_white"
                    android:maxLines="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
            />


            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:layout_below="@+id/iv_noti_thumb"
            >
                <ImageView android:layout_width="@dimen/_30sdp" android:layout_height="@dimen/_30sdp"
                           android:src="@drawable/ic_previous"
                           android:id="@+id/iv_noti_prev"
                />
                <ImageView android:layout_width="@dimen/_30sdp" android:layout_height="@dimen/_30sdp"
                           android:src="@drawable/ic_pause"
                           android:id="@+id/iv_noti_state"
                           android:layout_marginLeft="@dimen/_50sdp"
                           android:layout_marginRight="@dimen/_50sdp"
                />
                <ImageView android:layout_width="@dimen/_30sdp" android:layout_height="@dimen/_30sdp"
                           android:src="@drawable/ic_next"
                           android:id="@+id/iv_noti_next"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
