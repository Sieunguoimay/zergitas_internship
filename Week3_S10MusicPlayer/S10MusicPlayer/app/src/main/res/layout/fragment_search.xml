<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.HomeScreenActivity.AllSongsScreenFragment.FavouriteFragment"
        android:orientation="vertical"
>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp"

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/_0sdp"
            app:cardBackgroundColor="@color/colorTransparentLight"
    >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="Search..."
                android:id="@+id/tv_search_box"
                android:layout_margin="@dimen/_5sdp"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_search_fragment"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"

    >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>